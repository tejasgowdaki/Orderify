
  <div class="main-wrapper">

    <div id="container">
      <!--Left Part-->
      <div id="column-left">
        <div class="box">
          <div class="box-heading">Account</div>
          <div class="box-content">
            <ul class="list-item">
              <li><a href="<%= new_user_session_path %>">Login</a></li>
              <li><a href="<%= new_user_registration_path %>">Register</a></li>
              <li><a href="<%= new_password_path(resource_name) %>">Forgotten Password</a></li>
              <li><a href="<%= edit_user_registration_path %>">My Account</a></li>
              <li><a href="#">Wish List</a></li>
              <li><a href="#">Order History</a></li>
              <li><a href="#">Downloads</a></li>
              <li><a href="#">Returns</a></li>
              <li><a href="#">Transactions</a></li>
              <li><a href="#">Newsletter</a></li>
            </ul>
          </div>
        </div>
      </div>
      <!--Left End-->


      <!--Middle Part Start-->
      <div id="content">
        <!--Breadcrumb Part Start
        <div class="breadcrumb"> <a href="index.html">Home</a> » <a href="#">Account</a> » <a href="login.html">Login</a> </div>
        Breadcrumb Part End--><br/>
        <h1>Account Login</h1>
        <div class="login-content">
          <div class="left">
            <h2>New Customer</h2>
            <div class="content">
              <p><b>Register Account</b></p>
              <p>By creating an account you will be able to shop faster, be up to date on an order's status, and keep track of the orders you have previously made.</p>
              <a class="button" href="<%= new_user_registration_path %>">Continue</a></div>
          </div>
          <div class="right">
            <h2>Returning Customer</h2>
            <form enctype="multipart/form-data" method="post" action="">
              <div class="content">
                <p>I am a returning customer</p>
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <b>E-Mail Address:</b><br>
                  <%= f.email_field :email, autofocus: true, type: "text" %>
                  <br>
                  <br>
                  <b>Password:</b><br>
                  <%= f.password_field :password, autocomplete: "off" %>
                  <br/><br/>
                  <% if devise_mapping.rememberable? -%>
                    <div class="field">
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me %>
                    </div>
                  <% end %>
                  <a href="<%= new_password_path(resource_name) %>">Forgotten Password</a><br>
                  <br>
                  <%= f.submit "Log In", class: "button" %>
                <% end %>
              </div>
            </form>
          </div>
        </div>
      </div>
      <!--Middle Part End-->

      <div class="clear"></div>
    </div>
  </div>
